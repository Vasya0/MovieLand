<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="60">

    <!-- ====================== -->
    <!-- 1. Appenders â€” ÐºÑƒÐ´Ð° Ð¿Ð¸ÑÐ°Ñ‚ÑŒ -->
    <!-- ====================== -->
    <Appenders>

        <!-- ðŸ–¥ ÐšÐ¾Ð½ÑÐ¾Ð»ÑŒÐ½Ñ‹Ð¹ Ð²Ñ‹Ð²Ð¾Ð´ -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- ðŸ“„ ÐžÑÐ½Ð¾Ð²Ð½Ð¾Ð¹ Ñ„Ð°Ð¹Ð» Ð»Ð¾Ð³Ð¾Ð² -->
        <RollingFile name="FileLogger"
                     fileName="logs/app.log"
                     filePattern="logs/archive/app-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %c{1}:%L - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <!-- Ð¡Ð¾Ð·Ð´Ð°Ñ‘Ñ‚ Ð½Ð¾Ð²Ñ‹Ð¹ Ð»Ð¾Ð³ ÐºÐ°Ð¶Ð´Ñ‹Ð¹ Ð´ÐµÐ½ÑŒ -->
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <!-- Ð¥Ñ€Ð°Ð½Ð¸Ñ‚ÑŒ Ð°Ñ€Ñ…Ð¸Ð² Ð¼Ð°ÐºÑÐ¸Ð¼ÑƒÐ¼ 7 Ð´Ð½ÐµÐ¹ -->
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

        <!-- ðŸš¨ Ð›Ð¾Ð³ Ð¾ÑˆÐ¸Ð±Ð¾Ðº Ð¾Ñ‚Ð´ÐµÐ»ÑŒÐ½Ð¾ -->
        <RollingFile name="ErrorFile"
                     fileName="logs/error.log"
                     filePattern="logs/archive/error-%d{yyyy-MM-dd}.log.gz">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p [%t] %c{1}:%L - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="14"/>
        </RollingFile>

    </Appenders>

    <!-- ====================== -->
    <!-- 2. Loggers â€” ÐºÑ‚Ð¾ Ð¿Ð¸ÑˆÐµÑ‚ -->
    <!-- ====================== -->
    <Loggers>

        <!-- Ð¢Ð²Ð¾Ð¹ Ð¿Ð°ÐºÐµÑ‚ Ð¿Ñ€Ð¸Ð»Ð¾Ð¶ÐµÐ½Ð¸Ñ -->
        <Logger name="Version1" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- Hibernate Ñ‡ÑƒÑ‚ÑŒ Ð¿Ð¾Ñ‚Ð¸ÑˆÐµ -->
        <Logger name="org.hibernate" level="warn" additivity="false">
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Spring Framework â€” info -->
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="FileLogger"/>
        </Logger>

        <!-- Root (Ð²ÑÑ‘ Ð¾ÑÑ‚Ð°Ð»ÑŒÐ½Ð¾Ðµ) -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>

    </Loggers>

</Configuration>
